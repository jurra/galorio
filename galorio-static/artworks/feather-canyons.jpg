<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="moonlight" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a237e"/>
      <stop offset="50%" style="stop-color:#3949ab"/>
      <stop offset="100%" style="stop-color:#7986cb"/>
    </linearGradient>
    <radialGradient id="moon" cx="75%" cy="25%">
      <stop offset="0%" style="stop-color:#fff9c4"/>
      <stop offset="100%" style="stop-color:#f5f5dc"/>
    </radialGradient>
  </defs>
  
  <!-- Sky -->
  <rect width="100%" height="100%" fill="url(#moonlight)"/>
  
  <!-- Moon -->
  <circle cx="320" cy="80" r="30" fill="url(#moon)"/>
  
  <!-- Water -->
  <rect x="0" y="180" width="400" height="120" fill="#1565c0" opacity="0.7"/>
  
  <!-- Moonlight reflection -->
  <rect x="315" y="180" width="10" height="120" fill="#fff9c4" opacity="0.6"/>
  <rect x="312" y="190" width="16" height="100" fill="#fff9c4" opacity="0.3"/>
  
  <!-- Landscape silhouette -->
  <path d="M0,180 Q100,160 200,170 Q300,165 400,175 L400,300 L0,300 Z" fill="#1a1a2e"/>
  
  <!-- Text overlay -->
  <text x="200" y="280" text-anchor="middle" fill="white" font-family="serif" font-size="16" opacity="0.8">Moonlight Reflection</text>
</svg>